<html>

<head>
  <title>Matched Products Detail</title>
  <link rel="stylesheet" href="./css/bootstrap.min.css">
  <style>
    .glyphicon {
    font-size: 60px;
    }

    .badge-notify {
      background: red;
      position: relative;
      top: -20px;
      right: 10px;
      font-size: 20px;
    }

    .my-cart-icon-affix {
      position: fixed;
      z-index: 999;
    }

    .image{
    width: 300px; 
    height: auto;
  }

.bmd-modalButton {
  display: block;
  margin: 15px auto;
  padding: 5px 15px;
}

.close-button {
  overflow: hidden;
}

.bmd-modalContent {
  box-shadow: none;
  background-color: transparent;
  border: 0;
}
  
.bmd-modalContent .close {
  font-size: 30px;
  line-height: 30px;
  padding: 7px 4px 7px 13px;
  text-shadow: none;
  opacity: .7;
  color:#fff;
}

.bmd-modalContent .close span {
  display: block;
}

.bmd-modalContent .close:hover,
.bmd-modalContent .close:focus {
  opacity: 1;
  outline: none;
}

.bmd-modalContent iframe {
  display: block;
  margin: 0 auto;
}
    
  </style>
</head>

<body class="container" id="body">

	<div class="page-header">
		<h1>
			<strong>Product Detail</strong>
			<div style="float: right; cursor: pointer;"><span class="glyphicon glyphicon-shopping-cart my-cart-icon"><span class="badge badge-notify my-cart-badge"></span></span>
			</div>
		</h1>
	</div>

	<div class="modal fade" id="operationSuccessModal">
		<div class="modal-dialog">
			<div class="modal-content">
				<div class="modal-body">
					<div id="operationSuccessAlert" class="alert alert-success alert-dismissable">
						<!-- <strong>Order placed</strong> -->
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="modal fade" id="operationFailureModal">
		<div class="modal-dialog">
			<div class="modal-content">
				<div class="modal-body">
					<div id="operationFailureAlert" class="alert alert-danger alert-dismissable">
						<strong>An error has occured on placing the order.</strong>
					</div>
				</div>
			</div>
		</div>
	</div>

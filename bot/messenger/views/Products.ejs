	<!--Placeholder for Similar Product label div: to be added dynamically-->
	<!--Placeholder for Similar Products div: to be added dynamically-->

	<script src="./js/jquery-2.2.4.min.js"></script>
	<script src="./js/bootstrap.min.js"></script>
	<script src="./js/jquery.mycart.min.js"></script>
	<script src="./js/checkout.js"></script>
	<script>
			let selectedProduct = <%- JSON.stringify(selectedProduct); %>;
			let similarProducts = <%- JSON.stringify(similarProducts); %>;
	</script>
	<script src="./js/products.js"></script>

</body>

</html>